	<script is:inline>
		let slidesContainer = document.querySelector('.carousel-slide'); // The container for all the slides
		let slides = document.querySelectorAll('.carousel-slide .flex-shrink-0'); // Select the individual slides
		let prev = document.getElementById('prev');
		let next = document.getElementById('next');
		let currentSlide = 0;
	
		// Function to update the visibility of slides and apply translation
		const updateSlide = () => {
			const offset = -currentSlide * 100; // 100% per slide width
			slidesContainer.style.transform = `translateX(${offset}%)`; // Apply the translation
		};
	
		// Event listener for next button
		next.addEventListener('click', () => {
			currentSlide = (currentSlide + 1) % slides.length; // Loop back to the first slide
			updateSlide();
		});
	
		// Event listener for prev button
		prev.addEventListener('click', () => {
			currentSlide = (currentSlide - 1 + slides.length) % slides.length; // Loop back to the last slide
			updateSlide();
		});
	</script>
	  