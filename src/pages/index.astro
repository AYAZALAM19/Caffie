---
import Layout from "../layouts/Layout.astro"

---

<Layout>
	<h1>Welcome to Astro</h1>
	<p>Build faster websites with less client-side JavaScript</p>
	<div id="default-carousel" class="relative">
		<!-- Carousel container -->
		<div class="relative overflow-hidden">
		  <!-- Container for all slides (with transition applied) -->
		  <div class="carousel-slide flex transition-transform duration-1000 ease-in-out">
			<!-- Slide 1 -->
			<div class="flex-shrink-0 w-full">
			  <img class="w-full h-96 object-cover" src="https://picsum.photos/200/300" alt="Slide 1">
			</div>
			<!-- Slide 2 -->
			<div class="flex-shrink-0 w-full">
			  <img class="w-full h-96 object-cover" src="/assets/images/kkr.jpg" alt="Slide 2">
			</div>
			<!-- Slide 3 -->
			<div class="flex-shrink-0 w-full">
			  <img class="w-full h-96 object-cover" src="https://picsum.photos/200/300?random=2" alt="Slide 3">
			</div>
		  </div>
		</div>
	  
		<!-- Navigation Buttons -->
		<button id="prev" class="absolute top-1/2 left-4 -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full opacity-50 hover:opacity-100 z-10">
			<svg xmlns="http://www.w3.org/2000/svg" width="24"
			 height="24" viewBox="0 0 24 24" fill="none" 
			 stroke="currentColor" stroke-width="2" stroke-linecap="round"
			  stroke-linejoin="round" class="lucide lucide-chevron-left">
			  <path d="m15 18-6-6 6-6"/>
			</svg>
		</button>
		<button id="next" class="absolute top-1/2 right-4 -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full opacity-50 hover:opacity-100 z-10">
			<svg xmlns="http://www.w3.org/2000/svg" 
			width="24" height="24" viewBox="0 0 24 24" 
			fill="none" stroke="currentColor" stroke-width="2"
			 stroke-linecap="round" stroke-linejoin="round" 
			 class="lucide lucide-chevron-right">
			 <path d="m9 18 6-6-6-6"/>
			</svg>
		</button>
	  </div>
	  
	  
	  
	  
	<script is:inline>
		let slidesContainer = document.querySelector('.carousel-slide'); // The container for all the slides
		let slides = document.querySelectorAll('.carousel-slide .flex-shrink-0'); // Select the individual slides
		let prev = document.getElementById('prev');
		let next = document.getElementById('next');
		let currentSlide = 0;
	
		// Function to update the visibility of slides and apply translation
		const updateSlide = () => {
			const offset = -currentSlide * 100; // 100% per slide width
			slidesContainer.style.transform = `translateX(${offset}%)`; // Apply the translation
		};
	
		// Event listener for next button
		next.addEventListener('click', () => {
			currentSlide = (currentSlide + 1) % slides.length; // Loop back to the first slide
			updateSlide();
		});
	
		// Event listener for prev button
		prev.addEventListener('click', () => {
			currentSlide = (currentSlide - 1 + slides.length) % slides.length; // Loop back to the last slide
			updateSlide();
		});
	</script>
	  